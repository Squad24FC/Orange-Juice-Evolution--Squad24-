<div class="users-container">
  <div class="login-info">
    <h2>Entrar</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: 'email'},
                      class: 'input-form' %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: 'current-password'} %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "button-login" %>
        </div>
        <div class="no-account-links">
          <span class='no-account'>NÃ£o possui uma conta?</span>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
    <div class="login-splash">
      <%= image_tag "https://d335luupugsy2.cloudfront.net/cms/files/107693/1654526197/$g74vm2w5o56", :class => 'logo-evolution' %>
    </div>
</div>
