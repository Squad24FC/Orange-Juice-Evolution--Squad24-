
<%= render partial: "shared/header_track_name.html" %>

<div class="lessons-container">
  <section class="lessons-content">
    <%= link_to '← Voltar', :back, style:'back-button' %>
    <% @subject.lessons.each do |lesson| %>
    <h2><%= lesson.name %></h2>
    <p class='lesson-description'>Lorem ipsum dolor sit amet consectetur adipisicing elit. Deleniti ullam eveniet veritatis expedita consequatur recusandae ex illum impedit aliquam, cupiditate est similique quaerat, porro vel. Maiores commodi ullam consectetur voluptatibus!</p>
    <hr>
    <div class="lesson-info-detail">
      <p><b>Tipo de Mídia</b></p>
      <p><%= lesson.lesson_type %></p>
    </div>
    <hr>
    <div class="lesson-info-detail">
      <p><b>Autor</b></p>
      <p><%= lesson.author %></p>
    </div>
    <hr>
    <%= link_to 'Iniciar aula', "http://#{lesson.source_url}", :class => "button-start-lesson" %>
    <% end %>
  </section>
  <div class='lesson-cards-section'>
    <p class='lesson-breadcrumb'><%= @chapter.name %> > <%= @subject.name %></p>
    <div class="lessons-list">

      <% @subject.lessons.each do |lesson| %>
      <div class="lesson-card">
        <i class="fa-solid fa-circle-check check-icon"></i>
        <div class="lesson-info">
          <p class="lesson-card-title"><%= lesson.name %></p>
          <p class="lesson-length"><%= "#{lesson.duration} minutos" %></p>
        </div>
        <div class="lesson-type-icon">
          <% case lesson.lesson_type_before_type_cast %>
            <% when (0..4) %>
              <i class="fa-regular fa-file-lines"></i>
            <% when (4..6) %>
              <i class="fa-regular fa-circle-play"></i>
            <% when 7 %>
              <i class="fa-sharp fa-solid fa-headphones"></i>
          <% end %>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>
